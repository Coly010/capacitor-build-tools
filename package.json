{
  "name": "capacitor-build-tools",
  "version": "0.0.0",
  "description": "Build tools to aid automated CI/CD of capacitor apps",
  "bin": {
    "test-cap-build": "bin/test.js"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -p .",
    "ts-node": "ts-node"
  },
  "keywords": [
    "capacitor",
    "ios",
    "android",
    "mobile",
    "devops",
    "ci"
  ],
  "author": "Colum Ferry",
  "license": "MIT",
  "devDependencies": {
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.spec\\.(ts|tsx)$",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/shelljs": "^0.8.7",
    "chalk": "^3.0.0",
    "clear": "^0.1.0",
    "commander": "^5.0.0",
    "figlet": "^1.3.0",
    "path": "^0.12.7",
    "shelljs": "^0.8.3"
  }
}
